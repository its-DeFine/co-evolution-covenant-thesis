{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/its-DeFine/co-evolution-covenant-thesis/blob/main/spec/authorship-proof.schema.json",
  "title": "Co-Evolution Covenant Authorship Proof",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "chain",
    "address",
    "created_at",
    "repo",
    "author_alias",
    "github",
    "artifacts",
    "message",
    "signature"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "chain": { "type": "string", "description": "Chain family, e.g. ethereum" },
    "address": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "repo": { "type": "string" },
    "author_alias": { "type": "string" },
    "github": { "type": "string" },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["sha256"],
        "properties": {
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "message": {
      "type": "string",
      "description": "Signed message. Recommended to include an `Artifacts:` section with lines like `- <path>: sha256=<hex>` so the signature binds to the artifact hashes."
    },
    "signature": { "type": "string", "description": "EIP-191 personal_sign style signature, 0x-prefixed." }
  }
}
